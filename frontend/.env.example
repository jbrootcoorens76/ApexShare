# Environment Configuration for ApexShare Frontend
# Copy this file to .env.local and configure for your environment

# Environment (development, staging, production)
VITE_ENVIRONMENT=development

# API Configuration
VITE_API_BASE_URL=https://api.apexshare.be
VITE_AWS_REGION=eu-west-1

# Domain Configuration
VITE_DOMAIN=apexshare.be

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DETAILED_LOGGING=true

# Upload Configuration
VITE_MAX_FILE_SIZE=5368709120
VITE_CHUNK_SIZE=10485760
VITE_MAX_CONCURRENT_UPLOADS=3

# Development overrides (only used when VITE_ENVIRONMENT=development)
# VITE_API_BASE_URL=http://localhost:3001/api