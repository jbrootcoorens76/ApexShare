{
  "name": "apexshare",
  "version": "1.0.0",
  "description": "Serverless motorcycle training video sharing system built on AWS",
  "main": "lib/apexshare.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "cypress run --browser chrome",
    "test:e2e:open": "cypress open --browser chrome",
    "test:e2e:chrome": "cypress run --browser chrome --spec 'cypress/e2e/chrome-*.cy.{js,ts}'",
    "test:e2e:chrome-debug": "cypress open --browser chrome --spec 'cypress/e2e/chrome-*.cy.{js,ts}'",
    "test:performance": "cd tests/performance && artillery run artillery-config.yml",
    "test:security": "cd tests/security && node security-test-suite.js",
    "test:security:zap": "cd tests/security && python zap-security-scan.py",
    "test:all": "./scripts/run-tests.sh --all",
    "test:quick": "./scripts/run-tests.sh --unit --integration",
    "test:ci": "./scripts/run-tests.sh --all --ci",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "clean": "rm -rf dist lib/**/*.js lib/**/*.d.ts",
    "cdk": "cdk",
    "cdk:bootstrap": "cdk bootstrap",
    "cdk:diff": "cdk diff --app ./bin/apexshare.ts",
    "cdk:synth": "cdk synth --app ./bin/apexshare.ts",
    "cdk:list": "cdk list --app ./bin/apexshare.ts",
    "deploy:dev": "./scripts/deploy.sh --environment dev",
    "deploy:staging": "./scripts/deploy.sh --environment staging",
    "deploy:prod": "./scripts/deploy.sh --environment prod",
    "deploy:dev:force": "./scripts/deploy.sh --environment dev --force",
    "deploy:staging:force": "./scripts/deploy.sh --environment staging --force",
    "deploy:prod:force": "./scripts/deploy.sh --environment prod --force",
    "deploy:dev:dry-run": "./scripts/deploy.sh --environment dev --dry-run",
    "deploy:staging:dry-run": "./scripts/deploy.sh --environment staging --dry-run",
    "deploy:prod:dry-run": "./scripts/deploy.sh --environment prod --dry-run",
    "destroy:dev": "./scripts/destroy.sh --environment dev",
    "destroy:staging": "./scripts/destroy.sh --environment staging",
    "destroy:prod": "./scripts/destroy.sh --environment prod --preserve-data",
    "destroy:dev:force": "./scripts/destroy.sh --environment dev --force",
    "destroy:staging:force": "./scripts/destroy.sh --environment staging --force",
    "destroy:prod:complete": "./scripts/destroy.sh --environment prod --force",
    "build:lambdas": "npm run build:lambda:upload && npm run build:lambda:download && npm run build:lambda:email",
    "build:lambda:upload": "cd lambda/upload-handler && npm ci && npm run build",
    "build:lambda:download": "cd lambda/download-handler && npm ci && npm run build",
    "build:lambda:email": "cd lambda/email-sender && npm ci && npm run build",
    "validate:config": "node -e \"const config = require('./lib/shared/config'); console.log('âœ… Configuration valid');\"",
    "docs:generate": "typedoc --out docs src",
    "security:audit": "npm audit && npm run lint",
    "cost:estimate": "cdk diff --app ./bin/apexshare.ts | grep -E '(\\+|\\-|~).*Cost'",
    "setup:development": "npm install && npm run build && npm run build:lambdas"
  },
  "keywords": [
    "aws",
    "cdk",
    "serverless",
    "lambda",
    "s3",
    "dynamodb",
    "ses",
    "cloudfront",
    "api-gateway",
    "motorcycle",
    "training",
    "video-sharing"
  ],
  "author": "ApexShare Team",
  "license": "MIT",
  "devDependencies": {
    "@cypress/code-coverage": "^3.12.18",
    "@types/aws-lambda": "^8.10.138",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "artillery": "^2.0.4",
    "aws-cdk": "^2.137.0",
    "axios": "^1.12.2",
    "cypress": "^13.6.2",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.540.0",
    "@aws-sdk/client-cost-explorer": "^3.540.0",
    "@aws-sdk/client-dynamodb": "^3.540.0",
    "@aws-sdk/client-s3": "^3.540.0",
    "@aws-sdk/client-ses": "^3.540.0",
    "@aws-sdk/client-sns": "^3.540.0",
    "@aws-sdk/s3-request-presigner": "^3.540.0",
    "aws-cdk-lib": "^2.137.0",
    "constructs": "^10.3.0",
    "form-data": "^4.0.4",
    "puppeteer": "^24.22.0",
    "uuid": "^9.0.1"
  }
}
