{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./lib/*"],
      "@lambda/*": ["./lambda/*"],
      "@frontend/*": ["./frontend/*"]
    }
  },
  "include": [
    "bin/**/*",
    "lib/**/*",
    "lambda/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cdk.out",
    "frontend/**/*",
    "tests/**/*",
    "lambda/cost-anomaly-detector/**/*",
    "lambda/cost-forecaster/**/*",
    "lambda/cost-metrics-publisher/**/*",
    "lambda/dynamodb-capacity-analyzer/**/*",
    "lambda/lambda-cost-analyzer/**/*",
    "lambda/roi-analyzer/**/*",
    "lambda/storage-analyzer/**/*",
    "lambda/usage-analyzer/**/*",
    "lambda/tag-enforcer/**/*",
    "lib/constructs/**/*",
    "lib/stacks/cost-optimization-stack.ts",
    "lib/stacks/monitoring-stack.ts",
    "lib/stacks/frontend-stack.ts"
  ]
}